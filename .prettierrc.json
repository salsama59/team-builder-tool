{
    "useTabs": true,
    "arrowParens": "always",
    "bracketSpacing": true,
    "trailingComma": "none",
    "endOfLine": "lf",
    "overrides": [
        {
            "files": "*.component.html",
            "options": {
                "parser": "angular"
            }
        },
        {
            "files": "*.html",
            "options": {
                "parser": "html"
            }
        }
    ]
}